<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.itheima.health.dao.PermissionDao">

    <!--使用角色id，查询权限的集合-->
    <select id="findPermissionsByRoleId" parameterType="int" resultType="permission">
        SELECT p.* FROM t_permission p,t_role_permission rp WHERE p.id = rp.permission_id AND rp.role_id = #{roleId}
    </select>

    <!--查询所有权限信息:-->
    <select id="findAllPermission" resultType="permission">
        select * from t_permission
    </select>
    <!--新增检查项-->
    <insert id="add" parameterType="permission">
        insert into t_permission(name, keyword, description) values (#{name},#{keyword},#{description})
    </insert>

    <!--分页查询检查项，必须名称需要使用value-->
    <select id="findPage" parameterType="string" resultType="permission">
        select * from t_permission
        <if test="value!=null and value.length>0">
            where name = #{value}
        </if>
    </select>

    <!--删除检查项-->
    <delete id="deleteById" parameterType="int">
        delete from t_permission where id = #{id}
    </delete>

    <!--使用检查项id，查询检查项和检查组的中间表，获取查询的数量-->
    <select id="findCountByPermissionId" parameterType="int" resultType="long">
        SELECT COUNT(*) FROM t_role_permission WHERE permission_id = #{id}
    </select>

    <!--使用主键ID，查询检查项对象-->
    <select id="findById" parameterType="int" resultType="permission">
        select * from t_permission where id = #{id}
    </select>

    <!--更新检查项信息-->
    <update id="edit" parameterType="permission">
        <!--update t_checkItem set code=#{code},name=#{name},sex=#{sex},age=#{age},price=#{price},type=#{type},remark=#{remark},attention=#{attention} where id=#{id}-->
        update t_permission
        <set>
            <if test="name!=null">
                name=#{name},
            </if>
            <if test="keyword!=null">
                keyword=#{keyword},
            </if>
            <if test="description!=null">
                description=#{description},
            </if>
        </set>
        where id=#{id}
    </update>

    <!--查询所有检查项-->
    <select id="findAll" resultType="permission">
        select * from t_permission
    </select>
</mapper>