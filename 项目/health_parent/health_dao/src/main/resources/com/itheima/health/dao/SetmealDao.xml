<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.itheima.health.dao.SetmealDao">

    <!--新增保存套餐-->
    <insert id="add" parameterType="setmeal">
        <selectKey keyProperty="id" keyColumn="id" order="AFTER" resultType="int">
            select last_insert_id()
        </selectKey>
        insert into t_setmeal(name,code,helpCode,sex,age,price,remark,attention,img) values (#{name},#{code},#{helpCode},#{sex},#{age},#{price},#{remark},#{attention},#{img})
    </insert>

    <!--新增套餐检查组的中间表-->
    <insert id="setSetmealAndCheckGroup" parameterType="map">
        insert into t_setmeal_checkgroup(setmeal_id,checkgroup_id) values (#{setmeal_id},#{checkgroup_id})
    </insert>

    <!--条件查询套餐列表-->
    <select id="findPage" parameterType="string" resultType="setmeal">
        select * from t_setmeal
        <if test="value!=null and value.length>0">
            where name = #{value} or code = #{value} or helpCode = #{value}
        </if>
    </select>
    <!--主键查询
    <select id="findById" parameterType="int" resultType="setmeal">
        select * from t_setmeal where id=#{id}
    </select>-->
    <!--使用套餐id，查询检查组和套餐的中间表，获取检查组的集合-->
    <select id="findCheckItemIdsByCheckGroupId" parameterType="int" resultType="int">
        SELECT checkgroup_id FROM `t_setmeal_checkgroup` WHERE setmeal_id = #{id}
    </select>

    <!--套餐的更新保存-->
    <update id="editCheckGroup" parameterType="setmeal">
        update t_setmeal
        <set>
            <if test="code!=null">
                code=#{code},
            </if>
            <if test="name!=null">
                name=#{name},
            </if>
            <if test="helpCode!=null">
                helpCode=#{helpCode},
            </if>
            <if test="sex!=null">
                sex=#{sex},
            </if>
            <if test="age!=null">
                age=#{age},
            </if>
            <if test="price!=null">
                price=#{price},
            </if>
            <if test="remark!=null">
                remark=#{remark},
            </if>
            <if test="attention!=null">
                attention=#{attention},
            </if>
            <if test="img!=null">
                img=#{img},
            </if>
        </set>
        where id = #{id}
    </update>
    <!--使用套餐id，删除检查组和套餐的中间表-->
    <delete id="deleteCheckGroupAndCheckItemByCheckGroupId" parameterType="int">
        delete from t_setmeal_checkgroup where setmeal_id = #{id}
    </delete>
    <!--删除套餐-->
    <delete id="deleteById" parameterType="int">
        delete from t_setmeal where id = #{id}
    </delete>
    <!--查询所有-->
    <select id="findAll" resultType="setMeal">
        select * from t_setmeal
    </select>
    <!--主键查询-->
    <resultMap id="setmealMap" type="setmeal">
        <id property="id" column="id"></id>
        <result property="name" column="name"></result>
        <result property="code" column="code"></result>
        <result property="helpCode" column="helpCode"></result>
        <result property="sex" column="sex"></result>
        <result property="age" column="age"></result>
        <result property="price" column="price"></result>
        <result property="remark" column="remark"></result>
        <result property="attention" column="attention"></result>
        <result property="img" column="img"></result>
        <!--column="id"表示使用id字段进行传递-->
        <collection property="checkGroups" column="id" select="com.itheima.health.dao.CheckGroupDao.findCheckGroupListById"></collection>
    </resultMap>
    <select id="findById" resultMap="setmealMap" parameterType="int">
        select * from t_setmeal where id = #{id}
    </select>
</mapper>