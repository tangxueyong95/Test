<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itheima.health.dao.MenuDao">

    <select id="findMenuList" parameterType="int" resultType="menu">
        select * from t_menu WHERE level = 1 AND id IN (SELECT menu_id FROM t_role_menu WHERE role_id = #{id}) ORDER BY priority;
    </select>
    <select id="findChildrenByMenuId" parameterType="int" resultType="menu">
        select * from t_menu where parentMenuId = #{menu_id} AND id IN (SELECT menu_id FROM t_role_menu WHERE role_id = #{role_id}) order by priority
    </select>
    <!--分页查询菜单，必须名称需要使用value-->
    <select id="findPage" parameterType="string" resultType="menu">
        select * from t_menu
        <if test="value!=null and value.length>0">
            where name like "%"#{value}"%"
        </if>
    </select>

    <!--新增菜单-->
    <insert id="add" parameterType="menu">
        insert into t_menu(name,linkUrl,path,priority,description,icon,parentMenuId,level) values (#{name},#{linkUrl},#{path},#{priority},#{description},#{icon},#{parentMenuId},#{level})
    </insert>

    <!--更新检查项信息-->
    <update id="edit" parameterType="menu">
        <!--update t_checkItem set code=#{code},name=#{name},sex=#{sex},age=#{age},price=#{price},type=#{type},remark=#{remark},attention=#{attention} where id=#{id}-->
        update t_menu
        <set>
            <if test="name!=null">
                name=#{name},
            </if>
            <if test="linkUrl!=null">
                linkUrl=#{linkUrl},
            </if>
            <if test="path!=null">
                path=#{path},
            </if>
            <if test="priority!=null">
                priority=#{priority},
            </if>
            <if test="description!=null">
                description=#{description},
            </if>
            <if test="icon!=null">
                icon=#{icon},
            </if>
            <if test="parentMenuId!=null">
                parentMenuId=#{parentMenuId},
            </if>
            <if test="level!=null">
                level=#{level},
            </if>
        </set>
        where id=#{id}
    </update>

    <!--使用主键ID，查询菜单-->
    <select id="findById" parameterType="int" resultType="menu">
        select * from t_menu where id = #{id}
    </select>

    <!--删除菜单-->
    <delete id="deleteById" parameterType="int">
        delete from t_menu where id = #{id}
    </delete>

    <!--使用菜单id，查询菜单和角色的中间表，获取查询的数量-->
    <select id="findCountByMenuId" parameterType="int" resultType="long">
        SELECT COUNT(*) FROM t_role_menu WHERE menu_id = #{id}
    </select>

    <!--查询所有菜单-->
    <select id="findAll" resultType="checkitem">
        select * from t_menu
    </select>

    <!--根据菜单名查询菜单是否存在-->
    <select id="findMenuByName" parameterType="string" resultType="menu">
        select * from t_menu where name = #{name}
    </select>
    <select id="findMenuByPath" parameterType="string" resultType="menu">
        select * from t_menu where path = #{path}
    </select>

    <!--查询所有菜单信息:-->
    <select id="findAllMenu" resultType="menu">
        select * from t_menu
    </select>

    <select id="findFuIdByPath" parameterType="string" resultType="menu">
        select * from t_menu where path = #{path}
    </select>
</mapper>